---
import { Image } from "astro:assets";
const { post } = Astro.props;

if (!post) {
	return;
}
---

<article class="odd:rotate-1 even:-rotate-1 hover:rotate-0 transition hover:scale-105 duration-500 bg-fuchsia-50 rounded-2xl">
	<a href={`${post.data.slugfolder}${post.id}`} class="h-full flex flex-col">
		<Image
			src={post.data.image}
			alt={post.data.imageAlt}
			class:list={"w-full aspect-[6/4] object-cover rounded-t-2xl"}
			transition:name={`post-image-${post.id}`}
		/>

		<div class="px-4 pt-8 flex flex-col grow rounded-b-2xl overflow-hidden">
			<h2 class="h5 tracking-wide" transition:name={`post-title-${post.id}`}>{post.data.title}</h2>
			<p class="mt-2 mb-2 italic" transition:name={`post-tagtext-${post.id}`}>{post.data.tagtext}</p>
			<p class="mt-2 mb-8" transition:name={`post-excerpt-${post.id}`}>{post.data.excerpt}</p>
			<span
				class="text-center px-4 py-2 -mx-4 text-fuchsia-50 text-2xl font-bold bg-purple-900 mt-auto block"
			>
				See More
			</span>
		</div>
	</a>
</article>
