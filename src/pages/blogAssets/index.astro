---
import { getCollection } from "astro:content";
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import CardBlogPost from "~/components/CardBlogPost.astro";
const posts = await getCollection("assetPosts");
---

<Layout>
	<Section>
		<Container>
			<Heading>
				<h1 slot="heading-title" class="h2 text-purple-900">Game Assets</h1>
			</Heading>

			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 xl:gap-24">
				{posts.map((post) => <CardBlogPost post={post} />)}
			</div>
		</Container>
	</Section>
</Layout>
